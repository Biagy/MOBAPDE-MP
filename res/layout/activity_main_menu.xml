<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.dlsu.mobidev.gem.MainMenuActivity"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/singlePlayer"
        android:layout_width="280dp"
        android:layout_height="80dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="80dp"
        android:text="Single Player Game"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/multiplayer"
        android:layout_width="280dp"
        android:layout_height="80dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="24dp"
        android:text="Multiplayer Game"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/singlePlayer" />

    <Button
        android:id="@+id/customize"
        android:layout_width="280dp"
        android:layout_height="80dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="24dp"
        android:text="Customize Settings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/multiplayer" />

    <Button
        android:id="@+id/highScore"
        android:layout_width="280dp"
        android:layout_height="80dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="24dp"
        android:text="View High Score"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customize" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:layout_marginTop="28dp"
        android:text="Marballs"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
